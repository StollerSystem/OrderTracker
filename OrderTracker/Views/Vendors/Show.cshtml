@{
  Layout = "_Layout";
}

@using OrderTracker.Models;

<div class="mainTheme">
  <h2>Here are all the orders for <strong>@Model["vendor"].Name:</strong></h2>
  <div class="smallBorder">
    @if (@Model["orders"].Count == 0)
    {
      <h3>No orders have been placed yet</h3>
    } 
    <ol>
    @foreach (Order order in @Model["orders"])
    {
      <h3><li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li></h3>
    }
    </ol>
  </div>
  <br>
  <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
  <p><a href='/vendors'>Return to vendors</a></p>
  <p><a href='/'>Return to home Page</a></p>
</div>