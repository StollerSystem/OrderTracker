@using OrderTracker.Models;

@{
  Layout = "_Layout";
}
<div class="mainTheme">
  <h1>Vendors</h1>
  <p>Click on a vendor to see their orders.</p>
  <div class="smallBorder">
    @if (@Model.Count == 0)
    {
      <h3>No vendors have been added yet</h3>
    } 
    <ul>
    @foreach (Vendor vendor in Model)
    {
      <li><h3><a href='/vendors/@vendor.Id'>@vendor.Name</a> - @vendor.Description</h3></li>
    }
    </ul>
  </div>
  <h3><a href='/vendors/new'>Add a new vendor</a></h3>
  <p><a href='/'>Back to home page</a></p>
</div>